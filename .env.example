#//////////////////////////////////////////////////////
# DATABASE CONFIGURATION
#//////////////////////////////////////////////////////

# PostgreSQL connection string
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://username:password@localhost:5432/que_accounting"

#//////////////////////////////////////////////////////
# JWT CONFIGURATION
#//////////////////////////////////////////////////////

# JWT secret key (use a strong, random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-min-64-characters-long-random-string"

# Optional: JWT refresh token secret (if different from main secret)
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-min-64-characters"

# Optional: JWT issuer and audience for additional security
JWT_ISSUER="QUE-Accounting"
JWT_AUDIENCE="QUE-Accounting-Users"

# Token expiration time
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

#//////////////////////////////////////////////////////
# SUPER ADMIN CONFIGURATION
#//////////////////////////////////////////////////////

# Super admin email (for development/fallback)
# In production, prefer role-based authentication
SUPER_ADMIN_EMAIL="admin@yourcompany.com"

# Admin API key for server-to-server communication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY="your-secure-admin-api-key-32-characters"

#//////////////////////////////////////////////////////
# SERVER CONFIGURATION
#//////////////////////////////////////////////////////

# Server port
PORT=3001

# Node environment
NODE_ENV="development"

# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

#//////////////////////////////////////////////////////
# SECURITY CONFIGURATION
#//////////////////////////////////////////////////////

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration (if using sessions)
SESSION_SECRET="your-session-secret-key"

#//////////////////////////////////////////////////////
# EMAIL CONFIGURATION (Optional)
#//////////////////////////////////////////////////////

# For sending emails (password reset, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@yourcompany.com"

#//////////////////////////////////////////////////////
# LOGGING CONFIGURATION
#//////////////////////////////////////////////////////

# Log level
LOG_LEVEL="info"

# Log file path (optional)
LOG_FILE="./logs/app.log"

#//////////////////////////////////////////////////////
# SUBSCRIPTION CONFIGURATION
#//////////////////////////////////////////////////////

# Default subscription duration (in months)
DEFAULT_SUBSCRIPTION_DURATION_MONTHS=1

# Subscription reminder settings
SUBSCRIPTION_REMINDER_DAYS_BEFORE=7

#//////////////////////////////////////////////////////
# FILE UPLOAD CONFIGURATION
#//////////////////////////////////////////////////////

# Upload directory
UPLOAD_DIR="./uploads"

# Max file size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx"

#//////////////////////////////////////////////////////
# MONITORING CONFIGURATION
#//////////////////////////////////////////////////////

# Health check endpoint
HEALTH_CHECK_ENDPOINT="/health"

# Metrics endpoint
METRICS_ENDPOINT="/metrics"

#//////////////////////////////////////////////////////
# DEVELOPMENT SETTINGS
#//////////////////////////////////////////////////////

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Mock external services (for testing)
MOCK_EXTERNAL_SERVICES=false
